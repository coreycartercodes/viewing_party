  <div class='title' id='movie_details_title'>
    <h1><%= @movie.title %></h1>
    <%= button_to 'Create Viewing Party!', '/parties/new', method: :get %>
  </div>
  <div id='movie_stats'>
    <p>Vote Average: <%= @movie.vote_avg %></p>
    <p>Runtime: <%= @movie.runtime %></p>
    <p>Genre(s): 
    <% @movie.genres.each do |genre| %>
      <%= genre %>
    <% end %>
    </p>
    <hr>
  </div>

  
